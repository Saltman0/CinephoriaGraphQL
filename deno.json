{
  "tasks": {
    "build": "deno install --allow-scripts",
    "dev": "deno run --allow-net --allow-read --allow-env --allow-run --watch src/index.ts",
    "prod": "deno run --allow-net --allow-read --allow-env --allow-run src/index.ts",
    "generate": "graphql-codegen"
  },
  "imports": {
    "@apollo/datasource-rest": "npm:@apollo/datasource-rest@^6.4.1",
    "@apollo/server": "npm:@apollo/server@^4.11.3",
    "@apollo/utils.keyvaluecache": "npm:@apollo/utils.keyvaluecache@^3.1.0",
    "@graphql-codegen/cli": "npm:@graphql-codegen/cli@^5.0.3",
    "@graphql-codegen/typescript": "npm:@graphql-codegen/typescript@^4.1.2",
    "@graphql-codegen/typescript-resolvers": "npm:@graphql-codegen/typescript-resolvers@^4.4.1",
    "@std/assert": "jsr:@std/assert@1",
    "graphql": "npm:graphql@^16.10.0",
    "graphql-tag": "npm:graphql-tag@^2.12.6",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.2"
  },
  "nodeModulesDir": "auto",
  "lint": {
    "exclude": ["src/types.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  }
}